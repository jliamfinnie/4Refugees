<section ng-controller="PostingsCreateController" ng-init="prefillForm()">
  <div class="page-header">
    <h3>{{showTitle}}</h3>
  </div>
  <div id="modalAskAboutOffering" class="modal">
    <div class="modal-content">
      <form name="postingForm" class="my-form" novalidate>
        <div class="row">
          Send mail to:   <input ng-model="recipientName" readonly><br>
          About offering: <input ng-model="offeringDescription" readonly><br>
          <!-- Hidden fields set/used by controller
          Recipient Id: <input ng-model="recipientId" readonly><br>
          Reply to (i.e. current logged in user): <input ng-model="replyTo" readonly><br>
          -->
          Subject: <input name="title" ng-model="title" size="100"><br>
          Message: <textarea name="content" type="text" ng-model="content" id="content" class="form-control" placeholder="Content" cols="30" rows="10" required></textarea>
        </div>
      </form>
    </div>
    <div class="modal-footer">
      <a href="#!" ng-click="createMail(postingForm)" class="modal-action modal-close waves-effect waves-green btn-flat">Send</a>
      <a href="#!" class="modal-action modal-close waves-effect waves-blue btn-flat">Cancel</a>
    </div>
  </div>
</section>
